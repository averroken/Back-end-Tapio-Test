doctype html
html
    head
        title= title
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(href='/css/bootstrap.min.css', rel='stylesheet', media='screen')
body
.container
    h1 Change your password

    block content
        form(method='POST')
            legend Reset Password
            .form-group
                label() New Password
                input.form-control(type='password', name='password', value='', placeholder='New password', autofocus=true)
            .form-group
                label() Confirm Password
                input.form-control(type='password', name='confirm', value='', placeholder='Confirm password')
            .form-group
                button.btn.btn-primary(type='submit') Update Password
    //
        form(role='form', action='/reset', method='post', style='max-width: 300px;')
              .form-group
                input.form-control(type='password', name='password', placeholder='New password')
            .form-group
                input.form-control(type='password', name='confirm', placeholder='Reenter password')
            button.btn.btn-default(type='submit') Submit
        &nbsp;
    a(href='/')
        button.btn.btn-default-white(type='button') Cancel